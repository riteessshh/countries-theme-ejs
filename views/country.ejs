<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <% itemdata.forEach((item, i) => { %>
  <title><%= item.name%></title>
  <% }); %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&display=swap" rel="stylesheet">
</head>

<body class="light-theme">
  <div class="heading light-theme-elements shadow">
    <h1><a style="text-decoration:none; color:inherit;" href="/">Where in the World?</a></h1>
    <div>
      <p class="mode-button light-theme-elements"><img class="half-moon" style="width:12px; height:12px;" src="https://www.flaticon.com/svg/vstatic/svg/702/702471.svg?token=exp=1620459491~hmac=87afb30e96eb772de29bd699de8e4904"> Dark Mode</p>
    </div>
  </div>

<button class="back-button light-theme-elements shadow" type="button" name="button"><a href="/">Back</a></button>

<div class="box">
  <% itemdata.forEach((item, i) => { %>
  <div class="img">
    <img src=<%= item.flag%>>
  </div>
  <div class="">
    <h1><%= item.name%></h1>
    <div class="info">
      <div class="block1">
        <p><span>Native Name: </span><%= item.nativeName%></p>
        <p><span>Population: </span><%= item.population%></p>
        <p><span>Region: </span><%= item.region%></p>
        <p><span>Subregion: </span><%= item.subregion%></p>
        <p><span>Capital: </span><%= item.capital%></p>
      </div>
      <div class="block2">
        <p><span>Top Level Domain: </span><%= item.topLevelDomain%></p>
        <p><span>Currencies: </span><%= item.currencies[0].name%></p>
        <p><span>Languages: </span><%= item.languages[0].name %></p>
      </div>
      <p><span>Borders: </span><%= item.borders%></p>
    </div>
  </div>
  <% }); %>

  </div>

<%-include("partials/footer") %>
